<h1>Product List<h1>

<table>
    <thead>
        <th>Name</th>
        <th>Descripcion</th>
        <th>Precio</th>
    </thead>
    <tbody>
        <% @products.each do |product| %>
        <tr>
            <td> <%= product.name %> </td>
            <td> <%= product.description %> </td>
            <td> <%= product.price %> </td>
            <td>
                <%= link_to "Update", edit_product_path(product) %>
                <%= link_to "Delete", product, method: :delete, data:{confirm: "Deseas Eliminar este articulo?"} %>
            </td>
        </tr>        
        <% end %>
    </tbody>
</table>